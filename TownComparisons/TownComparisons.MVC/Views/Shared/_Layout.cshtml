<!DOCTYPE html>
<html class="no-js" lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/css")

    @RenderSection("head", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        @Html.Partial("_NavBar")
    </header>

    <div class="row">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/mm-foundation")
    @Scripts.Render("~/bundles/ng-file-upload")
    @Scripts.Render("~/bundles/angular-google-maps")

    <script type="text/javascript">
        window.MyApp = {};
    </script>
    <script src="~/Scripts/angular-flash.js"></script>
    <script src="~/App/Validator.js"></script>
    <script src="~/App/Compare/Collector.js"></script>
    <script src="~/App/TextSize.js"></script>
    <script src="~/App/App.js"></script>
    <script src="http://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        MyApp.rootPath = '@Url.Content("~")';
        @RenderSection("jsCode", required: false)
    </script>

    <script>
        $(document).foundation();
    </script>
</body>
</html>